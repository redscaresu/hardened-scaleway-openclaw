# Copy this file to terraform.tfvars and fill in your values
# terraform.tfvars is gitignored for security

# Zone for the instance (region comes from scw CLI config)
zone                = "fr-par-1"
instance_type       = "DEV1-S"
instance_name       = "openclaw-prod"
admin_username      = "yourname"
ssh_public_key_path = "~/.ssh/openclaw_ed25519.pub"

# Backup bucket name (output by bootstrap script)
backup_bucket_name  = "hso-backups-XXXXXXXX"

# The following are prompted during plan/apply for security (not stored in files):
#   - tailscale_auth_key   (get from https://login.tailscale.com/admin/settings/keys)
#   - signal_alert_number  (your phone number in E.164 format, e.g. +15551234567)

# Sensitive credentials â€” set via .env.terraform (sourced before plan/apply):
#   TF_VAR_openclaw_gateway_token, TF_VAR_anthropic_api_key,
#   TF_VAR_openai_api_key, TF_VAR_telegram_bot_token, TF_VAR_github_token
#   TF_VAR_squid_extra_domains (JSON list, e.g. '[".example.com", ".other.com"]')

# SSH access: set to false for Tailscale-only (no public SSH at all)
# enable_public_ssh = false

# Optional: restrict public SSH to specific IPs during initial setup
# allowed_ssh_ips   = ["1.2.3.4/32"]
